{
  "name": "exam-paper-setter",
  "version": "0.1.0",
  "private": true,
  "main": "./backend/main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "autoprefixer": "^10.4.8",
    "electron-is-dev": "^2.0.0",
    "postcss": "^8.4.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.0.11",
    "tailwindcss": "^3.1.8",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "nodemon --watch ./backend/* --exec \"electron .\"",
    "dev": "concurrently \"yarn start-react\" \"wait-on http://localhost:3000 && yarn start-electron\" ",
    "postinstall": "electron-builder install-app-deps",
    "pack-app": "yarn build-react && electron-builder --dir",
    "pack-build": "electron-builder --dir",
    "build": "yarn build-react && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "nodemon": "^2.0.19",
    "wait-on": "^6.0.1"
  }
}
